<div class="container-fluid">
  <div class = "center">
    <h5>This is the index for articles</h5>
    <strong><p id = "newArticle" class = "p_pointer">Create new article</p></strong>
    <div id = "newArticleDiv" class = "col s12 m8 l8">
       <%= render 'form'%>
    </div>
  </div>
  <hr>
  <div class = "row">
    <% @articles.each do |article| %>
      <div class = "col s12 l4 m4 center">
        <h3><%= link_to  article.title, article_path(article) %></h3> 
        <%= article.body%><br>
        <strong><%=article.user.email%></strong>
        <%= link_to "Edit", edit_article_path(article)%>
        <%= link_to "Delete", article_path(article), method: :delete, data:{confirm:'Are you sure?'}%><br>
      </div>
    <% end %>
  </div>
  <div id="articles">
    
  </div>
</div>
