<div class = "container">
  <%= form_for (@article) do |f|%>

    <div>
      <%= f.label "Title" %> 
      <%= f.text_field "title"%>
    </div>
 
    <div>
      <%= f.label "Content "%>
      <%= f.text_area "body"%>
    </div> 

    <div>
      <%= f.submit %> 
    </div>
       
  <% end %>
</div>
